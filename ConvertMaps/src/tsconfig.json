{
  "compilerOptions": {
    "outDir": "../TS/src/dist",
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../TS/src",
    "../../TS/scripts/dev.ts",
    "../TS/tsconfig.json",
    "../TS/prettier.config.js"
  ],
  "exclude": ["../TS/src/**/test/**"]
}
