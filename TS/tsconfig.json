{
    "compilerOptions": {
        "baseUrl": "./src",
        "allowJs": true,
        "target": "ES6",
        "lib": ["ES6", "ES2020"],
        "noImplicitAny": true,
        "strict": true,
        "moduleResolution": "classic",
        "paths": {
            "*": [
                "../node_modules/*/src/index",
                "../node_modules/*/lib/index",
                "../node_modules/*/index",
                "../node_modules/*/dist/index",
                "../node_modules/*"
            ]
        },
        "plugins": [
            {
                "transform": "war3-transformer",
                "mapDir": "C:/Users/Stan/Node/MEC-map/TS/maps/map.w3x",
                "entryFile": "C:/Users/Stan/Node/MEC-map/TS/src/main.ts",
                "outputDir": "C:/Users/Stan/Node/MEC-map/TS/dist/map.w3x"
            }
        ],
        "types": [
            "lua-types/core/index",
            "lua-types/core/coroutine",
            "lua-types/core/global",
            "lua-types/core/math",
            "lua-types/core/metatable",
            "lua-types/core/modules",
            "lua-types/core/string",
            "lua-types/core/table",
            "lua-types/core/os",
            "lua-types/special/5.3",
            "war3-types/core/compat",
            "war3-types/core/common",
            "war3-types/core/blizzard",
            "war3-types/core/commonai",
            "war3-types/core/polyfill",
            "war3-types/special/w3ts",
            "w3ts-jsx/dist/src/types"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react"
    },
    "include": ["src", "node_modules/w3ts-jsx/dist", "node_modules/w3ts-jsx/dist/node_modules/basic-pragma"],
    "exclude": [],
    "tstl": {
        "luaTarget": "5.3",
        "noHeader": true,
        "luaLibImport": "require",
        "noImplicitSelf": true,
        "luaBundle": "dist/tstl_output.lua",
        "luaBundleEntry": "./src/main.ts",
        "luaPlugins": [
            {
                "name": "tstl-jsx",
                "import": "JsxTransformer"
            }
        ]
    }
}
